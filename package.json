{
  "name": "webui",
  "version": "0.0.0",
  "private": true,
  "description": "Well abstracted components using latest HTML & CSS capabilities.",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/vue"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "validate": "run-p type-check lint format test",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "story:build": "histoire build",
    "story:dev": "histoire dev",
    "story:preview": "histoire preview",
    "type-check": "vue-tsc --build --force",
    "format": "prettier . --check",
    "lint": "eslint .",
    "style": "eslint . --fix && prettier --write .",
    "test": "npm run test --workspace packages/vue",
    "test:coverage": "npm run test:coverage --workspace packages/vue",
    "test:watch": "npm run test:watch --workspace packages/vue",
    "vue": "npm run --workspace=@webui/vue"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.11",
    "@fontsource-variable/jura": "^5.1.1",
    "@fontsource-variable/nunito": "^5.1.1",
    "@heroicons/vue": "^2.2.0",
    "@histoire/plugin-vue": "^0.17.17",
    "@tailwindcss/vite": "^4.0.0",
    "@vueuse/core": "^12.2.0",
    "@webui/vue": "^0.1.0",
    "histoire": "^0.17.17",
    "npm-run-all2": "^7.0.2",
    "scroll-timeline-polyfill": "^1.1.0",
    "tailwindcss": "^4.0.0",
    "vitepress": "^1.5.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@vitest/eslint-plugin": "1.1.21",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.2.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.17.0",
    "eslint-plugin-cypress": "^4.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "inquirer": "^9",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript": "5.7.2",
    "vue-tsc": "^2.2"
  }
}
