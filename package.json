{
  "name": "webui",
  "version": "0.0.0",
  "private": true,
  "description": "Well-abstracted code patterns that leverage the latest capabilities of the web-platform.",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/vue"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "validate": "run-p type-check lint format test",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:host": "vitepress dev docs --host",
    "docs:preview": "vitepress preview docs",
    "story:build": "histoire build",
    "story:dev": "histoire dev",
    "story:preview": "histoire preview",
    "type-check": "vue-tsc --build --force",
    "format": "prettier . --check",
    "lint": "eslint .",
    "style": "eslint . --fix && prettier --write .",
    "test": "npm run test --workspace packages/vue",
    "test:coverage": "npm run test:coverage --workspace packages/vue",
    "test:watch": "npm run test:watch --workspace packages/vue",
    "vue": "npm run --workspace=webui.dev"
  },
  "dependencies": {
    "@fontsource-variable/jura": "^5.2.5",
    "@fontsource-variable/nunito": "^5.2.5",
    "@heroicons/vue": "^2.2.0",
    "@histoire/plugin-vue": "^0.17.17",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.9",
    "@vueuse/core": "^12.8.2",
    "@vueuse/sound": "^2.1.3",
    "histoire": "^0.17.17",
    "mlly": "^1.4.2",
    "npm-run-all2": "^7.0.2",
    "picocolors": "^1.1.1",
    "scroll-timeline-polyfill": "^1.1.0",
    "tailwindcss": "^4.0.9",
    "tailwindcss-motion": "^1.1.0",
    "vitepress": "^1.6.3",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/eslint-plugin": "1.1.36",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.21.0",
    "eslint-plugin-cypress": "^4.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "5.7.2",
    "vue-tsc": "^2.2"
  }
}
