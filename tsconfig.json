{
  "compilerOptions": {
    "target": "ESnext",
    "module": "ESnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@theme/*": ["docs/.vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", "./stories/**/*.story.vue", "./docs/**/*"]
}
